<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".button_link_home"), "/", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".button_home"), "/" %></li>
        <li><%= link_to t(".button_help"), "/help" %></li>
        <% if logged_in? %>
          <li><%= link_to t(".button_users"), "/users" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(".account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".button_logout"), "/logout", method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".button_login"), "/login" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
